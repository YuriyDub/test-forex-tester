{
  "name": "test-forex-tester",
  "version": "1.0.0",
  "description": "Forex chart testing application",
  "main": "dist/bundle.js",
  "type": "module",
  "scripts": {
    "build": "esbuild src/chart.ts --bundle --format=esm --outfile=dist/bundle.js --sourcemap",
    "dev": "concurrently \"node esbuild.config.js watch\" \"live-server --port=3000 --open=/index.html --watch=dist\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "esbuild": "^0.19.0",
    "live-server": "^1.2.2"
  },
  "keywords": [
    "forex",
    "chart",
    "trading",
    "canvas"
  ],
  "author": "",
  "license": "MIT"
}
